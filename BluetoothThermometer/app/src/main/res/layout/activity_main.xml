<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tonydicola.bletest.app.MainActivity">

    <Button
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set"
        android:onClick="sendClick"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/input"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/scrollView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <TextView
            android:id="@+id/messages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </ScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="s"
        android:textSize="90sp"
        android:id="@+id/temperature"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/send"
        android:layout_centerHorizontal="true" />
        android:layout_toStartOf="@+id/stopwatchbutton" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:ems="10"
        android:id="@+id/input"
        android:hint="Optimum Temperature"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:numeric="signed|integer"
        android:autoText="true"
        android:maxLength="4" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reconnect"
        android:id="@+id/reconnect"
        android:layout_above="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/send" />

    <Chronometer
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/chronometer"
        android:textSize="45sp"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/temperature"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start/Stop"
        android:id="@+id/stopwatchbutton"
        android:layout_above="@+id/scrollView"
        android:layout_toEndOf="@+id/chronometer" />


</RelativeLayout>
